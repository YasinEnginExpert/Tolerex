{
  "uid": "tolerex-grpc",
  "title": "Tolerex â€“ gRPC Observability",
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "5s",
  "tags": ["tolerex", "grpc", "distributed"],
  "panels": [
    {
      "type": "stat",
      "title": "Total gRPC Requests",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(grpc_requests_total)",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 0, "y": 0, "w": 8, "h": 5 }
    },
    {
      "type": "stat",
      "title": "gRPC Errors",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(grpc_requests_total{status=\"ERROR\"})",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 8, "y": 0, "w": 8, "h": 5 }
    },
    {
      "type": "stat",
      "title": "gRPC OK Requests",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(grpc_requests_total{status=\"OK\"})",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 16, "y": 0, "w": 8, "h": 5 }
    },
    {
      "type": "timeseries",
      "title": "gRPC Requests by Method",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum by (method) (rate(grpc_requests_total[1m]))",
          "legendFormat": "{{method}}",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 0, "y": 5, "w": 24, "h": 9 }
    },
    {
      "type": "timeseries",
      "title": "gRPC Latency p50",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum by (le, method) (rate(grpc_request_duration_seconds_bucket[1m])))",
          "legendFormat": "{{method}}",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 0, "y": 14, "w": 12, "h": 8 }
    },
    {
      "type": "timeseries",
      "title": "gRPC Latency p95",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (le, method) (rate(grpc_request_duration_seconds_bucket[1m])))",
          "legendFormat": "{{method}}",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 12, "y": 14, "w": 12, "h": 8 }
    },
    {
      "type": "timeseries",
      "title": "gRPC Latency p99",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "histogram_quantile(0.99, sum by (le, method) (rate(grpc_request_duration_seconds_bucket[1m])))",
          "legendFormat": "{{method}}",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 0, "y": 22, "w": 24, "h": 8 }
    }
  ]
}
